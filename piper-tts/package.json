{
  "name": "piper-tts",
  "displayName": "Piper TTS",
  "description": "High-quality local speech to text with Piper",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Piper TTS",
      "properties": {
        "piper-tts.voice": {
          "type": "string",
          "default": "en_US-hfc_female-medium",
          "description": "Voice model to use for text-to-speech. Use the 'Piper TTS: Select Voice' command to change."
        }
      }
    },
    "commands": [
      {
        "command": "piper-tts.readAloud",
        "title": "Read Aloud Text",
        "category": "Piper TTS"
      },
      {
        "command": "piper-tts.stopPlayback",
        "title": "Stop Reading",
        "category": "Piper TTS"
      },
      {
        "command": "piper-tts.selectVoice",
        "title": "Select Voice",
        "category": "Piper TTS"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "piper-tts.readAloud",
          "group": "1_modification"
        },
        {
          "command": "piper-tts.stopPlayback",
          "group": "1_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "piper-tts.readAloud",
          "when": "editorHasSelection"
        },
        {
          "command": "piper-tts.stopPlayback"
        },
        {
          "command": "piper-tts.selectVoice"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
